# Bookstor Environment Variables
# Copy this file to .env and fill in your values

# Database Configuration (default works with docker-compose)
DATABASE_URL=postgresql://bookstor:bookstor_password@db:5432/bookstor

# Security - REQUIRED
# JWT Secret Key (minimum 32 characters)
# Generate with: python -c 'import secrets; print(secrets.token_urlsafe(32))'
# Or: openssl rand -base64 32
SECRET_KEY=

# Google Books API (optional but recommended for better book metadata)
# Get your API key from: https://console.cloud.google.com/apis/credentials
GOOGLE_BOOKS_API_KEY=

# Microsoft Entra SSO (optional - for enterprise authentication)
ENTRA_CLIENT_ID=
ENTRA_TENANT_ID=
ENTRA_CLIENT_SECRET=

# CORS Configuration (optional)
# Comma-separated list of allowed origins
# Use "*" for development only (credentials will be disabled automatically)
# In production, specify exact origins: http://localhost:3000,https://yourdomain.com
CORS_ORIGINS=*
